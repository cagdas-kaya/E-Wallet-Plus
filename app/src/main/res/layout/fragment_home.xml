<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/round_bottom_corner"
        android:backgroundTint="@color/appColor">

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        />

<TextView
    android:id="@+id/tv_title_last_spends"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/recycler_Wallet"
    android:text="@string/last_spends_title"
    android:textColor="@color/gray"
    android:textSize="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_last_spends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title_last_spends"
        android:layout_margin="@dimen/_10sdp"

        />

</RelativeLayout>